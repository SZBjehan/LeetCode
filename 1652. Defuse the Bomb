class Solution {
    public int[] decrypt(int[] code, int k) {
        
        int[] output = new int[code.length];
        if(k==0){
            for(int i=0; i<code.length; i++){
                output[i] = 0;
            }
        }
        else if(k>0){
            for(int i=0; i<code.length; i++){        
                int sum = 0;
                for(int j=1; j<=k; j++){
                    int temp = (i + j) % code.length;
                    sum = sum + code[temp];
                }
                output[i] = sum;
            }
        }
        else if(k<0){
            for (int i = 0; i < code.length; i++) {
                int sum = 0;
                for (int j = 1; j <= Math.abs(k); j++) {
                    int temp = (i - j + code.length) % code.length; 
                    sum += code[temp];
                }
                output[i] = sum;
            }
        }
    return output;
    }
}
